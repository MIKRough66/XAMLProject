<Page
    x:Class="Blood_Bank.PatientInformation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Blood_Bank"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Style="{StaticResource GridStyle}">

        <Grid Margin="10,20,10,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="10" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Text="Patient Information" FontSize="70"/>

            <TextBlock Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap" Text="Patient ID" FontSize="35" Foreground="White"/>
            <TextBox x:ConnectionId='2' x:Name="staffId" Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="3" Height="50" FontSize="35" />

            <TextBlock Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap" Text="Title" FontSize="35" Foreground="White"/>
            <ComboBox x:ConnectionId='3' x:Name="Title" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="3" HorizontalAlignment="Left" VerticalAlignment="Center" Width="100" FontSize="35">
                <ComboBoxItem Content="Mr"/>
                <ComboBoxItem Content="Mrs"/>
                <ComboBoxItem Content="Ms"/>
                <ComboBoxItem Content="Miss"/>
            </ComboBox>

            <TextBlock Grid.Row="2" Grid.Column="4" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap" Text="First Name" FontSize="35" Foreground="White"/>
            <TextBox x:ConnectionId='4' x:Name="firstName" Grid.Row="2" Grid.Column="6" Grid.ColumnSpan="3" Width="230" Height="50" FontSize="35" />

            <TextBlock Grid.Row="2" Grid.Column="9" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap" Text="Last Name" FontSize="35" Foreground="White"/>
            <TextBox x:ConnectionId='5' x:Name="lirstName" Grid.Row="2" Grid.Column="11" Grid.ColumnSpan="3" Width="230" Height="50" FontSize="35" />

            <TextBlock Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap" Text="Gender" FontSize="35" Foreground="White"/>
            <TextBox x:ConnectionId='6' x:Name="gender" Grid.Row="3" Grid.Column="4" Grid.ColumnSpan="3" HorizontalAlignment="Left" VerticalAlignment="Center" Width="230" Height="50" FontSize="35" />

            <TextBlock Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap" Text="Age" FontSize="35" Foreground="White"/>
            <TextBox x:ConnectionId='7' x:Name="age" Grid.Row="4" Grid.Column="4" Grid.ColumnSpan="3" HorizontalAlignment="Left" VerticalAlignment="Center" Width="230" Height="50" FontSize="35" />

            <TextBlock Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap" Text="Phone" FontSize="35" Foreground="White"/>
            <TextBox x:ConnectionId='8' x:Name="phone" Grid.Row="5" Grid.Column="4" Grid.ColumnSpan="3" HorizontalAlignment="Left" VerticalAlignment="Center" Width="230" Height="50" FontSize="35" />

            <TextBlock Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap" Text="Address" FontSize="35" Foreground="White"/>
            <TextBox x:ConnectionId='9' x:Name="address" Grid.Row="6" Grid.Column="4" Grid.ColumnSpan="3" HorizontalAlignment="Left" VerticalAlignment="Center" Width="230" Height="50" FontSize="35" />

            <TextBlock Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="3" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap" Text="Requested Group" FontSize="35" Foreground="White"/>
            <ComboBox x:ConnectionId='10' x:Name="requestedbloodgroup" Grid.Row="7" Grid.Column="4" Grid.ColumnSpan="3" HorizontalAlignment="Left" VerticalAlignment="Center" Width="100" FontSize="35">
                <ComboBoxItem Content="A+"/>
                <ComboBoxItem Content="A-"/>
                <ComboBoxItem Content="B+"/>
                <ComboBoxItem Content="B-"/>
                <ComboBoxItem Content="O+"/>
                <ComboBoxItem Content="O-"/>
                <ComboBoxItem Content="AB+"/>
                <ComboBoxItem Content="AB-"/>
            </ComboBox>

            <TextBlock Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="4" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap" Text="Received Quantity" FontSize="35" Foreground="White"/>
            <TextBox x:ConnectionId='11' x:Name="receivedqty" Grid.Row="8" Grid.Column="4" Grid.ColumnSpan="3" HorizontalAlignment="Left" VerticalAlignment="Center" Width="230" Height="50" FontSize="35" />

            <TextBlock Grid.Row="9" Grid.Column="1" Grid.ColumnSpan="4" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap" Text="Received Date" FontSize="35" Foreground="White"/>
            <TextBox x:ConnectionId='12' x:Name="receiveddate" Grid.Row="9" Grid.Column="4" Grid.ColumnSpan="3" HorizontalAlignment="Left" VerticalAlignment="Center" Width="230" Height="50" FontSize="35" />

            <TextBlock Grid.Row="10" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap" Text="Remarks" FontSize="35" Foreground="White"/>
            <TextBox x:ConnectionId='13' x:Name="remarks" Grid.Row="10" Grid.Column="4" Grid.ColumnSpan="7" HorizontalAlignment="Left" VerticalAlignment="Center" Width="530" Height="50" FontSize="35" />




        </Grid>

    </Grid>
</Page>

