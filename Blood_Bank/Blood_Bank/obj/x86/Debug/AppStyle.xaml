<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Blood_Bank">

    <ImageBrush x:Key="WoodBrush" ImageSource="Images/Wood.jpg"/>
    <Style x:Key="GridStyle" TargetType="Grid">
        <Setter Property="Background" Value="{StaticResource WoodBrush}"/>
    </Style>

    <ImageBrush x:Key="WoodBrush02" ImageSource="Images/wood02.jpg"/>
    <Style x:Key="GridStyle02" TargetType="Grid">
        <Setter Property="Background" Value="{StaticResource WoodBrush02}"/>
    </Style>



</ResourceDictionary>

